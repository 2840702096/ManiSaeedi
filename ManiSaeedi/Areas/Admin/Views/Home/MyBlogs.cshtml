@model List<ManiSaeedi.Models.Entities.MyBlogs>

@section Top{
    <link rel="icon" href="/Admin/images/dashboard/favicon.png" type="image/x-icon">
    <link rel="shortcut icon" href="/Admin/images/dashboard/favicon.png" type="image/x-icon">

    <title>مالتی کارت -قالب</title>

    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Font Awesome-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/fontawesome.css">

    <!-- Flag icon-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/flag-icon.css">

    <!-- ico-font-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/icofont.css">

    <!-- Prism css-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/prism.css">

    <!-- Chartist css -->
    <link rel="stylesheet" type="text/css" href="/Admin/css/chartist.css">

    <!-- Bootstrap css-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/bootstrap.css">

    <!-- App css-->
    <link rel="stylesheet" type="text/css" href="/Admin/css/admin.css">
}

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            لیست وبلاگ ها
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                        <li class="breadcrumb-item">وبلاگ ها</li>
                        <li class="breadcrumb-item active">
                            لیست وبلاگ ها
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>
                    اطلاعات وبلاگ
                </h5>
            </div>
            <div class="col-sm-2 col-md-2 d-inline-block">
                <a style="margin-top:10px" href="/CreateWeblog" class="btn btn-secondary">ایجاد بلاگ</a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr>
                                                    <th class="text-center" style="vertical-align:middle">عکس</th>
                                                    <th class="text-center" style="vertical-align:middle">عنوان</th>
                                                    <th class="text-center" style="vertical-align:middle">متن</th>
                                                    <th class="text-center" style="vertical-align:middle">وضعیت</th>
                                                    <th class="text-center" style="vertical-align:middle">ویرایش</th>
                                                    <th class="text-center" style="vertical-align:middle">حذف</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var Weblog in Model)
                                                {
                                                    <tr>
                                                        <td class="text-center" style="vertical-align: middle;">
                                                            <img src="/Admin/images/WeblogThumbNail/@Weblog.Image" class="img-thumbnail" />
                                                        </td>
                                                        <td class="text-center" style="vertical-align: middle;">@Weblog.Title</td>
                                                        <td class="text-center" style="vertical-align: middle;"><a href="/Body?body=@Weblog.Body" class="btn btn-secondary">مشاهده</a></td>
                                                        <td style="vertical-align: middle;">
                                                            @if (Weblog.IsActive == true)
                                                            {
                                                                <p style="text-align:center">فعال</p>
                                                            }
                                                            else
                                                            {
                                                                <p style="text-align:center">غیر فعال</p>
                                                            }
                                                        </td>
                                                        <td class="text-center" style="vertical-align: middle;">
                                                            <a style="display:flex; flex-direction:column; margin:2px; font-size: 25px;"
                                                               href="/EditWeblog/@Weblog.Id" class="text-info btn-sm">
                                                                <i class="fa fa-edit">

                                                                </i>
                                                            </a>
                                                        </td>
                                                        <td class="text-center" style="vertical-align: middle;">
                                                            <a style="display:flex; flex-direction:column; margin:2px; font-size: 25px;"
                                                               href="/DeleteWeblog/@Weblog.Id?currentImage=@Weblog.Image" class="text-info btn-sm">
                                                                <i style="color:red" class="fa fa-trash">

                                                                </i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

@section Bottom{
    <!-- latest jquery-->
    <script src="/Admin/js/jquery-3.3.1.min.js"></script>

